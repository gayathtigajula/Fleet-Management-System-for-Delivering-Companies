         cityDistances["delhi"]["hyderabad"] = 1700;
        cityDistances["delhi"]["gandhinagar"] = 950;
        cityDistances["delhi"]["pune"] = 1470;
        cityDistances["delhi"]["jaipur"] = 280;
        cityDistances["delhi"]["lucknow"] = 500;
        
